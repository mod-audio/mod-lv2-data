@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix midi:  <http://lv2plug.in/ns/ext/midi#> .
@prefix mod:   <http://moddevices.com/ns/mod#> .
@prefix opts:  <http://lv2plug.in/ns/ext/options#> .
@prefix pg:    <http://lv2plug.in/ns/ext/port-groups#> .
@prefix patch: <http://lv2plug.in/ns/ext/patch#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rsz:   <http://lv2plug.in/ns/ext/resize-port#> .
@prefix spdx:  <http://spdx.org/rdf/terms#> .
@prefix state: <http://lv2plug.in/ns/ext/state#> .
@prefix unit:  <http://lv2plug.in/ns/extensions/units#> .

<https://mod.audio/plugins/ConvolutionLoader>
    a lv2:ReverbPlugin, lv2:Plugin, doap:Project ;

    lv2:extensionData opts:interface ,
                      state:interface ,
                      <http://lv2plug.in/ns/ext/worker#interface> ,
                      <http://kxstudio.sf.net/ns/lv2ext/programs#Interface> ;

    lv2:optionalFeature <http://lv2plug.in/ns/ext/buf-size#boundedBlockLength> ,
                        state:loadDefaultState ,
                        state:threadSafeRestore ;

    lv2:requiredFeature opts:options ,
                        <http://lv2plug.in/ns/ext/urid#map> ,
                        <http://lv2plug.in/ns/ext/worker#schedule> ;

    opts:supportedOption <http://lv2plug.in/ns/ext/buf-size#nominalBlockLength> ,
                         <http://lv2plug.in/ns/ext/buf-size#maxBlockLength> ,
                         <http://lv2plug.in/ns/ext/parameters#sampleRate> ;

    patch:writable <https://mod.audio/plugins/ConvolutionLoader#irfile> ;

    lv2:port [
        a lv2:InputPort, lv2:AudioPort ;
        lv2:index 0 ;
        lv2:symbol "lv2_audio_in_1" ;
        lv2:name "Audio Input 1" ;
    ] ,
    [
        a lv2:InputPort, lv2:AudioPort ;
        lv2:index 1 ;
        lv2:symbol "lv2_audio_in_2" ;
        lv2:name "Audio Input 2" ;
    ] ;

    lv2:port [
        a lv2:OutputPort, lv2:AudioPort ;
        lv2:index 2 ;
        lv2:symbol "lv2_audio_out_1" ;
        lv2:name "Audio Output 1" ;
    ] ,
    [
        a lv2:OutputPort, lv2:AudioPort ;
        lv2:index 3 ;
        lv2:symbol "lv2_audio_out_2" ;
        lv2:name "Audio Output 2" ;
    ] ;

    lv2:port [
        a lv2:InputPort, atom:AtomPort ;
        lv2:index 4 ;
        lv2:name "Events Input" ;
        lv2:symbol "lv2_events_in" ;
        atom:bufferType atom:Sequence ;
        atom:supports <http://lv2plug.in/ns/ext/patch#Message> ;
        lv2:designation lv2:control ;
    ] ;

    lv2:port [
        a lv2:OutputPort, atom:AtomPort ;
        lv2:index 5 ;
        lv2:name "Events Output" ;
        lv2:symbol "lv2_events_out" ;
        atom:bufferType atom:Sequence ;
        atom:supports <http://lv2plug.in/ns/ext/patch#Message> ;
        lv2:designation lv2:control ;
    ] ;

    lv2:port [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 6 ;
        lv2:name "Dry Level" ;
        lv2:symbol "drylevel" ;
        lv2:default 0 ;
        lv2:minimum -60 ;
        lv2:maximum 0 ;
        lv2:scalePoint [
            rdfs:label  "Off" ;
            rdf:value -60 ;
        ] ;
        unit:unit unit:db ;
    ] ,
    [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 7 ;
        lv2:name "Wet Level" ;
        lv2:symbol "wetlevel" ;
        lv2:default -30 ;
        lv2:minimum -60 ;
        lv2:maximum 0 ;
        lv2:scalePoint [
            rdfs:label  "Off" ;
            rdf:value -60 ;
        ] ;
        unit:unit unit:db ;
    ] ,
    [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 8 ;
        lv2:name "High Pass Filter" ;
        lv2:symbol "hpf" ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 500 ;
        lv2:scalePoint [
            rdfs:label  "Off" ;
            rdf:value 0 ;
        ] ;
        unit:unit unit:hz ;
    ] ,
    [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 9 ;
        lv2:name "Trails" ;
        lv2:symbol "trails" ;
        lv2:default 1 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:portProperty lv2:toggled ;
        lv2:portProperty lv2:integer ;
    ] ,
    [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 10 ;
        lv2:name "Enabled" ;
        lv2:symbol "lv2_enabled" ;
        lv2:default 1 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:portProperty lv2:toggled , lv2:integer ;
        lv2:designation lv2:enabled ;
    ] ;

    mod:brand "MOD" ;
    mod:label "Convolution Loader" ;

    doap:name "Convolution Loader" ;
    doap:license <http://spdx.org/licenses/ISC.html> ;

    doap:developer [
        foaf:name "DISTRHO" ;
        foaf:homepage <https://mod.audio/plugins/ConvolutionLoader> ;
    ] ;

    doap:maintainer [
        foaf:name "MOD" ;
        foaf:homepage <https://mod.audio/> ;
    ] ;

    rdfs:comment """
Plugin to convolve audio signals, allowing you to load so-called Reverb Impulse Responses.
This plugin uses 2-stage processing, where the initial convolution is done in realtime and a 2nd stage with background processing.

Only flac and wav files are supported.
It can load multi-channel files, but will always process in stereo mode.
For faster loading it is recommended to use 48kHz wav format files.

Features:
Plugin by MOD Audio & DISTRHO, based on HiFi-LoFi FFTConvolver engine.
""";

    lv2:microVersion 0 ;
    lv2:minorVersion 2 ;

    state:state [
        <https://mod.audio/plugins/ConvolutionLoader#irfile> <hall1-medium.flac>;
    ] .
